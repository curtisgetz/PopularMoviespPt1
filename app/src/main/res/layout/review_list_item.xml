<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_review_author_label"
        android:text="@string/review_author"
        android:textSize="@dimen/reviews_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/tv_review_author"
        tools:text="ohlalipop"
        android:textSize="@dimen/reviews_text_size"
        app:layout_constraintLeft_toRightOf="@id/tv_review_author_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_review_author_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_review_content_label"
        android:text="@string/review_content"
        app:layout_constraintTop_toBottomOf="@id/tv_review_author_label"
        app:layout_constraintRight_toRightOf="@id/tv_review_author_label"
        android:textSize="@dimen/reviews_text_size"
        android:padding="10dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_review_content"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_review_content_label"
        app:layout_constraintTop_toTopOf="@id/tv_review_content_label"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="This is a test review!"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>

</android.support.constraint.ConstraintLayout>