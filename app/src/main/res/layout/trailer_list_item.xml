<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_video_name"
        tools:text="Title Of Video"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="4dp"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_video_type"
        app:layout_constraintTop_toBottomOf="@id/tv_video_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_video_name"
        android:textSize="20sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        tools:text="Trailer"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/video_source_iv"
        android:contentDescription="@string/source_logo_iv_cd"
        android:src="@drawable/youtube_social_square_white"
        tools:src="@drawable/youtube_social_square_white"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>