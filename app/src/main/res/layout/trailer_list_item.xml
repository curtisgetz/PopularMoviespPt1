<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    >



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_video_name"
        tools:text="Title Of Video"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/video_source_iv"
        android:padding="4dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>
        <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_video_type"
        app:layout_constraintTop_toBottomOf="@id/tv_video_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_video_name"
        android:padding="4dp"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        tools:text="Trailer"/>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/video_source_iv"
        android:contentDescription="@string/source_logo_iv_cd"
        android:src="@drawable/youtube_social_square_dark"
        tools:src="@drawable/youtube_social_square_dark"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/colorAccent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>